---
import DonationForm from "~/components/DonatePage/DonationForm";
import Layout from "~/layouts/Layout.astro";

export const prerender = false;
---

<Layout title="Angyalmancsok | Támogatás">
    <div class="relative">
        <!-- Hero Section -->
        <section class="relative container-padding py-12 md:py-16 overflow-hidden bg-primary-500">
            <div class="max-w-6xl mx-auto">
                <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold text-white tracking-[0.3em] uppercase">
                    Támogatás
                </h1>
            </div>
        </section>

        <!-- Main Content -->
        <section class="container-padding py-12 md:py-16 bg-gray-100">
            <div class="max-w-6xl mx-auto">
                <div class="grid lg:grid-cols-3 gap-12">
                    <!-- Left Column - Info -->
                    <div class="lg:col-span-1">
                        <h2 class="text-2xl font-bold text-text-heading mb-4">
                            Hogyan támogathatsz minket?
                        </h2>
                        <p class="text-text-description mb-8">
                            Pénzbeli adomány, tárgyi adomány, önkéntesség
                        </p>

                        <h3 class="text-xl font-bold text-text-heading mb-4">
                            Mire elég a támogatás?
                        </h3>
                        <ul class="space-y-3 text-text-description">
                            <li class="flex items-start gap-2">
                                <span class="text-primary-500 mt-1">•</span>
                                <span>2,000 Ft jutalomfalat a foglalkozás alatt</span>
                            </li>
                            <li class="flex items-start gap-2">
                                <span class="text-primary-500 mt-1">•</span>
                                <span>5,000 Ft útiköltség a vidéki terápiás foglalkozásra</span>
                            </li>
                            <li class="flex items-start gap-2">
                                <span class="text-primary-500 mt-1">•</span>
                                <span>15,000 Ft egy terápiás foglalkozás ára</span>
                            </li>
                            <li class="flex items-start gap-2">
                                <span class="text-primary-500 mt-1">•</span>
                                <span>30,000 Ft terápiás kutya egészségügyi szűrés</span>
                            </li>
                            <li class="flex items-start gap-2">
                                <span class="text-primary-500 mt-1">•</span>
                                <span>60,000 Ft egy havi (4 alkalom) terápiás foglalkozás ára</span>
                            </li>
                        </ul>
                    </div>

                    <!-- Right Column - Form -->
                    <div class="lg:col-span-2">
                        <DonationForm
                            client:load
                            dogImage="/dogs/enid-front.jpg"
                        />
                    </div>
                </div>
            </div>
        </section>
    </div>
</Layout>
